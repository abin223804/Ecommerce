    <section>
<div class="dashboard">
    <div class="container">
        <div class="row">
          <div class="col-12 col-lg-12 col col-md-8 col-sm-6 col-xs-2">
        
        <h3 class="h3order"></h3>
        <br>
          <table id="myTable" class="table	">
              <thead>
                <tr>
                  <th >OrderId</th>
                 <th> </th>
                  <th >Time</th>
                  <th >Payment</th>
                  <th >Status</th>
                  <th >Actions</th>  
                  <th>View Order</th>
                  
                </tr>
              </thead>
              <% if(id){ %> 
              <% for(let key of Order){ %>
                <% if(Order){ %> 
                
              <tbody>  
                <tr>
                    <td><%= key._id %></td>
                    <td><%= key.name %></td>
                    <td><%= key.createdAt.toDateString() %></td>
                    <td><%= key.payment %></td>
                    <td><i class="m-r-10 mdi mdi-account-off text-success" style="width: 100px;"><%= key.status %></i></td>
                  <td>
                    <% if(key.status ==='Delivered'){ %>
                      <p style="color:crimson;font-weight: bolder;">Delivered</p>
                    <% }else if(key.status === 'Rqstd'){ %>
                      <p style="color:crimson;font-weight: bolder;">Return Requested</p>
                    <% }else if(key.status === 'Returned'){ %>
                      <p style="color:crimson;font-weight: bolder;">Return Conformed</p>
                    <% }else if((key.status != 'Canceled')  && (key.status != 'Return Request Canceled')){ %>
                      <!-- <button class="btn btn btn-danger -->
             <!-- <button data-toggle="modal"  data-target="#exampleModal" onclick="del('<%= key._id %>')" >   <a href="/calcelOrder?id=<%= key._id %>"  class="btn btn-danger" >Cancel Order</a></button> -->
             <button class="btn btn-danger"   data-toggle="modal"  data-target="#exampleModal"
             onclick="del('<%= key._id %>')">Cancel Order</button>
           <a id="<%= key._id %>"
             href="/calcelOrder?id=<%= key._id %> "></a>
                  <% }else{} %>
                  </td>
                  <td><% if(key.status != 'Canceled') {%><a href="/orderDetails?id=<%= key._id %>" class="btn btn-info">View Details</a><% }else{}%></td>
                 
                </tr>
              </tbody>
              <% }else{ %> 
                <p>No order has been made yet.</p>
                <% } %> 
              <% } %>
            </table>
      

    

        <% }else{ %> 
            <h4>please login....</h4>
        <% } %> 
        <!-- <a href="/shop" class="btn btn-primary"><span>GO SHOP  </span><i class="icon-long-arrow-right"></i></a> -->
    </div>
</div>
</div>

</div>
</section>
